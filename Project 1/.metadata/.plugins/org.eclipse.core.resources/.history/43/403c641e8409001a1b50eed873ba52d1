public class BubbleSort implements SortInterface
{
	int count = 0;
    long timeStart = 0;
    long timeEnd = 0;
    
    /* * *
     * Iterative version of Bubble Sort
     * * */
    public int[] iterativeSort(int[] a) throws UnsortedException
    {
    	timeStart = System.nanoTime();
    	
    	int n = a.length;
    	for (int i = 0; i < n - 1; i++)
    	{
    		for (int j = 0; j < n - i - 1; j++)
    		{
    			//increment count to count this check
    			count++;
    			if (a[j] > a[j+1])
                { 
                    // increment count to swap a[j+1] and a[i]
    				count++;
                    int temp = a[j]; 
                    a[j] = a[j+1]; 
                    a[j+1] = temp; 
                }
    		}
    	}
            
    	
    	for (int blockSize = 1; blockSize < a.length; blockSize *= 2) {
    		count++;
    		for (int start = 0; start < a.length; start += 2 * blockSize) {
    			merge(a, aux, start, start + blockSize, start + 2 * blockSize);
    		}
    	}
    	
    	timeEnd = System.nanoTime();
    	checkSortedArray(ret);
    	return ret;
    }
}
